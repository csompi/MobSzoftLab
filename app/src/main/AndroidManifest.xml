<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobsoft.vizelibalint.hu.mobszoftlab">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MobSoftApplication">

        <meta-data
            android:name="DATABASE"
            android:value="sugar.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="mobsoft.vizelibalint.hu.mobszoftlab.model" />

        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.register.RegisterActivity"
            android:label="@string/register_label">
        </activity>
        <activity
            android:name=".ui.company.CompanyActivity"
            android:label="@string/company_label">
        </activity>
        <activity
            android:name=".ui.category.CategoryActivity">
        </activity>

    </application>

</manifest>